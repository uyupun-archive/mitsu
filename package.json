{
  "name": "mitsu",
  "description": "Mitsu is SOCIAL RESISTANCE's online game server.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "dev": "nodemon --exec 'yarn lint && node ./bin/www'",
    "make:model": "sequelize model:create --underscored",
    "make:seeder": "sequelize seed:generate",
    "migrate": "sequelize db:migrate --env development --config ./configs/database.js",
    "migrate:fresh": "sequelize db:migrate:undo:all --config ./configs/database.js && yarn migrate",
    "seed": "sequelize db:seed:all --config ./configs/database.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.6.1",
    "http-errors": "~1.6.3",
    "ioredis": "^4.17.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.12",
    "nodemon": "^2.0.6",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": ">=4",
    "lint-staged": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
