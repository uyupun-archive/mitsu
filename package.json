{
  "name": "mitsu",
  "description": "Mitsu is SOCIAL RESISTANCE's online game server.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "dev": "nodemon --exec 'yarn lint && node ./bin/www'",
    "make:model": "sequelize model:create --underscored",
    "make:seeder": "sequelize seed:generate",
    "migrate": "sequelize db:migrate --config ./configs/database.js",
    "migrate:fresh": "sequelize db:migrate:undo:all --config ./configs/database.js && yarn migrate",
    "seed": "sequelize db:seed:all --config ./configs/database.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "commit": "cz",
    "world": "node ./libs/world-cli.js",
    "jwt": "node ./libs/jwt-secret-key-generator.js"
  },
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "cli-table3": "^0.6.0",
    "commitizen": "^4.2.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cz-conventional-changelog-ja": "^0.0.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.6.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.12",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.6",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": ">=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "supertest": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache",
      "jest --bail --coverage=false ./tests"
    ]
  }
}
